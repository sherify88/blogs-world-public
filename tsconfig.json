{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "rootDir": "./src"
  },
  "include": [
    "src/**/*.ts",
    "sequelize.config.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}